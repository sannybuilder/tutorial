{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "sb",
	"scopeName": "source.sb",
	"fileTypes": ["txt", "scm", "sb"],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.block",
					"begin": "\\{",
					"end": "\\}"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "(?i)\\b(IF|AND|ELSE|END|NOT|OR|REPEAT|THEN|UNTIL|WHILE)\\b"
				},
				{
					"name": "keyword",
					"match": "(?i)\\b(CONST|DOWNTO|FOR|TO|HEX|VAR|INTEGER|INT|FLOAT|SHORTSTRING|STRING|LONGSTRING|IMPORT|EXPORT|SWITCH|CASE|DEFAULT|FUNCTION)\\b"
				},
				{
					"name": "keyword",
					"match": "(?i)\\b(TRUE|FALSE|UNKNOWN)\\b"
				}
			]
		},
		"commands": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "\\b(jump|terminate_this_script|set_time_scale|set_car_density_multiplier|set_time_of_day|print_help|load_sprite|is_key_pressed|print_string_now|print_big_string|print_formatted|nop|wait|create_car|request_model|has_model_loaded|mark_model_as_no_longer_needed|get_time_of_day|does_char_exist|locate_char_any_means_char_3d|is_player_playing|create_player|load_and_launch_mission|create_object|delete_object|add_blip_for_coord|remove_blip|set_object_coordinates|get_object_coordinates|is_button_pressed|store_car_char_is_in|warp_char_into_car|explode_car|set_car_health|get_car_health)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex",
					"match": "\\b0x[0-9A-Fa-f]+\\b"
				},
				{
					"name": "constant.numeric.float",
					"match": "\\b\\d+\\.\\d+\\b"
				},
				{
					"name": "constant.numeric.integer",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.comparison",
					"match": "(==|!=|<|>|<=|>=)"
				},
				{
					"name": "keyword.operator.assignment",
					"match": "="
				},
				{
					"name": "keyword.operator.arithmetic",
					"match": "(\\+|\\-|\\*|/|\\+=|\\-=|\\*=|/=)"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other",
					"match": "\\$[a-zA-Z_][a-zA-Z0-9_]*\\b"
				},
				{
					"name": "variable.other",
					"match": "@[a-zA-Z_][a-zA-Z0-9_]*\\b"
				},
				{
					"name": "variable.parameter",
					"match": "\\b[0-9]+@\\b"
				}
			]
		}
	}
}
